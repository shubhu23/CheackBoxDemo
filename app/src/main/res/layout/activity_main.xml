<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_your_programming_language"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/Red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <CheckBox
            android:id="@+id/androidCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Android"
            android:textSize="24sp"
            android:background="@color/Grey"
            android:textStyle="italic|bold"
            android:textColor="@color/Blue"/>

        <CheckBox
            android:id="@+id/javaCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Java"
            android:textSize="24sp"
            android:background="@color/Grey"
            android:textStyle="italic|bold"
            android:textColor="@color/Red"/>

        <CheckBox
            android:id="@+id/phpcheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic|bold"
            android:textSize="24sp"
            android:background="@color/Grey"
            android:textColor="@color/colorPrimaryDark"
            android:text="PHP" />

        <CheckBox
            android:id="@+id/pythoncheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic|bold"
            android:textSize="24sp"
            android:background="@color/Grey"
            android:textColor="@color/colorPrimary"
            android:text="Python" />

        <CheckBox
            android:id="@+id/unitycheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic|bold"
            android:textSize="24sp"
            android:background="@color/Grey"
            android:text="Unity 3D" />
    </LinearLayout>

</RelativeLayout>